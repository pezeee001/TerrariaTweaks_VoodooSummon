<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net40</TargetFramework>
		<RootNamespace>Tweaks</RootNamespace>
		<Platforms>x86</Platforms>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<DebugType>none</DebugType>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Lib.Harmony" Version="2.4.2" IncludeAssets="compile" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Terraria">
			<HintPath>$(TERRARIA_PATH)</HintPath>
			<Private>False</Private>
		</Reference>
		<Reference Include="Microsoft.Xna.Framework">
			<HintPath>$(XNA_FRAMEWORK_PATH)</HintPath>
			<Private>False</Private>
		</Reference>
		<Reference Include="Microsoft.Xna.Framework.Game">
			<HintPath>$(XNA_FRAMEWORK_GAME_PATH)</HintPath>
			<Private>False</Private>
		</Reference>
	</ItemGroup>

</Project>